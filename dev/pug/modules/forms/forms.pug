mixin form_default(formClass,formId)
  - formClass = formClass || ''
  - formId = formId || ''
  if formId
    form(class='form ' + formClass, id=''+formId, action='#', enctype='multipart/form-data')
      +form_default_body()
  else
    form(class='form ' + formClass, action='#', enctype='multipart/form-data')
      +form_default_body()

